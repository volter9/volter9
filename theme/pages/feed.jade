doctype xml
rss(
    version="2.0", 
    xmlns:atom="http://www.w3.org/2005/Atom", 
    xmlns:dc="http://purl.org/dc/elements/1.1/"
)
    channel
        title volter9.github.io
        description Личный блог volter9
        link http://volter9.github.io
        atom:link(
            rel="self",
            type="application/rss+xml",
            href=$url->makeFull('feed')
        )
        
        each post in posts
            item= post.title
            guid(isPermaLink="true")= $url->makeFull($post['route'])
            description= post.content
            pubdate
                - echo date('r', strtotime($post['date']))